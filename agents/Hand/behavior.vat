<?xml version="1.0"?>
<behavior comments="I am user controlled">
  <method disclosed="true">
    <while-running/>
    <rule>
      <if>
        <test expression1="@Epidemic" operator="&gt;=" expression2="80"/>
      </if>
      <then>
        <stop-simulation/>
        <show-message disclosed="true" text="Be careful, an epidemic might break out soon!" subtext=""/>
        <run-simulation/>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="@Epidemic" operator="&gt;=" expression2="120"/>
      </if>
      <then>
        <stop-simulation/>
        <show-message disclosed="true" text="You Started an Epidemic.  NOooooooooooooooooooooooooooooo" subtext=""/>
        <finish-animations/>
        <reload-world/>
        <run-simulation/>
      </then>
    </rule>
    <rule>
      <if>
        <key label="S"/>
        <percent-chance expression="10"/>
      </if>
      <then>
        <new shape="UNTITLED Soap">
          <direction/>
        </new>
      </then>
    </rule>
    <rule>
      <if>
        <key label="F"/>
        <percent-chance expression="0.1"/>
      </if>
      <then>
        <new shape="BACFOOD Bacfood">
          <direction/>
        </new>
      </then>
    </rule>
    <rule>
      <if>
        <key label="M"/>
        <percent-chance expression="0.3"/>
      </if>
      <then>
        <new shape="BACTERIA Bacteria">
          <direction/>
        </new>
      </then>
    </rule>
    <rule>
      <if>
        <key label="N"/>
      </if>
      <then>
        <broadcast class-name="Bacteria" selector="Die"/>
      </then>
    </rule>
    <rule>
      <if>
        <key label="C"/>
      </if>
      <then/>
    </rule>
    <rule>
      <if/>
      <then>
        <set attribute="B" value="0.25*(B[left] + B[right] + B[down] + B[up])"/>
        <set attribute="D" value="0.25*(D[left] + D[right] + D[down] + D[up])"/>
      </then>
    </rule>
  </method>
</behavior>
