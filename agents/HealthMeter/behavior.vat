<?xml version="1.0"?>
<behavior comments="I am user controlled">
  <method disclosed="true">
    <on selector="Subtract"/>
    <rule>
      <if>
        <see shape="HEALTH Health">
          <direction drow="-1"/>
        </see>
      </if>
      <then>
        <erase>
          <direction drow="-1"/>
        </erase>
        <move>
          <direction drow="-1"/>
        </move>
      </then>
    </rule>
  </method>
  <method disclosed="true">
    <before-running/>
    <rule>
      <if/>
      <then>
        <set attribute="@MOD_SICK" value="0"/>
      </then>
    </rule>
  </method>
  <method disclosed="true">
    <on selector="Move_Up"/>
    <rule>
      <if>
        <see shape="SCOREBOARD Scoreboard">
          <direction drow="1"/>
        </see>
      </if>
      <then>
        <move disclosed="true" animation="constant" duration="0.1">
          <direction drow="1"/>
        </move>
        <new shape="HEALTH Health">
          <direction drow="-1"/>
        </new>
      </then>
    </rule>
  </method>
  <method disclosed="true">
    <while-running/>
    <rule>
      <if>
        <key label="R"/>
      </if>
      <then>
        <broadcast class-name="Bacteria" selector="Die"/>
        <broadcast class-name="White_Blood_Cell" selector="Die"/>
        <set attribute="@SICK" value="0"/>
        <set attribute="@MOD_SICK" value="0"/>
        <set attribute="@EPIDEMIC" value="0"/>
        <set attribute="IS_RESETING" value="1"/>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="Is_Reseting" expression2="1"/>
        <see shape="SCOREBOARD Scoreboard">
          <direction drow="1"/>
        </see>
      </if>
      <then>
        <message selector="Move_Up">
          <direction/>
        </message>
      </then>
    </rule>
    <rule>
      <if>
        <test expression1="Is_Reseting" expression2="1"/>
        <empty>
          <direction drow="1"/>
        </empty>
      </if>
      <then>
        <set attribute="IS_RESETING" value="0"/>
      </then>
    </rule>
  </method>
</behavior>
